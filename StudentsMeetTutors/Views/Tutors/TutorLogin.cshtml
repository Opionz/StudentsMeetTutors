@model StudentsMeetTutors.Requets.LoginRequest

@{
    ViewData["Title"] = "Login";
    Layout = "_TutorLoginPage";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="row col-12 text-center">

    <div class="col-sm-3">

    </div>
    <div class="card text-white bg-secondary col-sm-6" style="border-radius: 50px;">
        <br />
        <br />
        <form method="post" asp-controller="Tutors" asp-action="TutorLogin" class="">
            <br />
            <h3>Welcome</h3>
            <br />
            <div class="form-group">
                <input asp-for="Username" type="text" class="form-control" id="" aria-describedby="" placeholder="Enter your Username">
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="form-group">
                <select asp-for="TeachingStyle" id="LearningStyle" class="form-control">
                    <option selected>Choose your preferred teaching style</option>
                    <option value="One On One">One on One</option>
                    <option value="Group less than 10">Group less than 10</option>
                    <option value="Group less than 20">Group less than 20</option>
                    <option value="General attendance">General attendance</option>
                    <option value="A Lot of Questions during Session">A Lot of Questions during Session</option>
                    <option value="A very patient and interactive session">A very patient and interactive session</option>
                </select>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
            <br />
            <br />
            @Html.ValidationMessage("Error")
            <br />
        </form>
    </div>
</div>

