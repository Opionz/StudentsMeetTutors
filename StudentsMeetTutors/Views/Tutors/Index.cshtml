@model IEnumerable<StudentRecord>

@{
    Layout = "_SelectTutors";
}
<br />
<br />
<br />

<div class="col-md-10">
    <h4 style="color:azure; background-color:coral; text-align:center"> Welcome, Well done on your role as a Tutor, below are the details of the next attendees of your the next tutorial session at the Facaulty hall by 5:00pm </h4>

    @{
        int i = 0;
    }
    <div class="form-group justify-content-center" style="display:flex">
        <div class="">

        </div>
        <div class="col-md-10 ">
            @if (Model.Count() > 0)
            {
                <table class=" table-sm table-hover table table-responsive" cellpadding="0" cellspacing="0" border="0">
                    <thead style="color: white; background-color: dimgrey;">
                        <tr>
                            <th>S/N</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Username</th>
                            <th> Course</th>
                        </tr>
                    </thead>
                    @foreach (StudentRecord student in Model)
                    {
                        <tbody style="background-color: dimgray; color: dimgray">
                            <tr style="color:black !important; background-color:dimgray">
                                <td>@(++i)</td>
                                <td>@student.FirstName</td>
                                <td>@student.LastName</td>
                                <td>@student.Username</td>
                                <td>@student.Course</td>
                            </tr>
                        </tbody>
                    }

                </table>
            }
            else
            {
                <br />
                <br />
                <br />
                <h4 style="color: dimgrey;">
                    No student(s) are currently enrolled in this class. Please check back later.
                </h4>
            }

        </div>

    </div>
</div>
<script>

</script>
